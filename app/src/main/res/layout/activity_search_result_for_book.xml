<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchResultForBook">


    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5" />

    <TextView
        android:id="@+id/SearchResultBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:text="Book Search Result"
        android:textSize="24sp" />

    <ListView
        android:id="@+id/ListBook"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="15" />

    <TextView
        android:id="@+id/SearchResultPeople"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_weight="3"
        android:gravity="center"

        android:text="People Search Result"
        android:textSize="24sp" />

    <ListView
        android:id="@+id/ListUser"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="15" />

    <Button
        android:id="@+id/NewSearch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="36dp"
        android:layout_weight="0.5"
        android:backgroundTint="@android:color/white"
        android:text="New Search" />

    <Button
        android:id="@+id/HomeButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"


        android:layout_marginBottom="4dp"



        android:layout_weight="0.5"
        android:backgroundTint="@android:color/white"

        android:text="Back to Home" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />



</LinearLayout>