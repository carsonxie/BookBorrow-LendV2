<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RateToOwner">

    <TextView
        android:id="@+id/textView_BorrowerRequest3"
        android:layout_width="383dp"
        android:layout_height="49dp"
        android:layout_marginBottom="462dp"
        android:gravity="center"
        android:text="@string/rate_to_owner"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Owner_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_BorrowerRequest3"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/Owner_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="16dp"
        android:text="@string/RateToOwnerUserName"
        app:layout_constraintStart_toEndOf="@+id/Owner_image"
        app:layout_constraintTop_toBottomOf="@+id/textView_BorrowerRequest3" />

    <TextView
        android:id="@+id/Owner_rate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/rate_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Owner_image" />

    <EditText
        android:id="@+id/edit_owner_rate"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:hint="@string/RateToOwnerUserRatePrompt"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/Owner_rate_text"
        app:layout_constraintTop_toBottomOf="@+id/textView_BorrowerRequest3" />

    <TextView
        android:id="@+id/Owner_comment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/rate_comment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Owner_rate_text" />

    <EditText
        android:id="@+id/edit_owner_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:hint="@string/RateToOwnerUserCommentPrompt"
        android:inputType="textLongMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Owner_comment_text"
        app:layout_constraintTop_toBottomOf="@+id/edit_owner_rate" />

    <ImageView
        android:id="@+id/Book_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Owner_comment_text"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/Book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="80dp"
        android:text="@string/RateToOwnerBookName"
        app:layout_constraintStart_toEndOf="@+id/Book_image"
        app:layout_constraintTop_toBottomOf="@+id/Owner_comment_text" />

    <TextView
        android:id="@+id/Book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/RateToOwnerBookAuthor"
        app:layout_constraintTop_toBottomOf="@+id/Book_name"
        tools:layout_editor_absoluteX="106dp" />

    <TextView
        android:id="@+id/Book_rate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/rate_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Book_image" />

    <TextView
        android:id="@+id/Book_comment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/rate_comment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Book_rate_text" />

    <EditText
        android:id="@+id/edit_book_rate"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="152dp"
        android:ems="10"
        android:hint="@string/RateToOwnerUserRatePrompt"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/Book_rate_text"
        app:layout_constraintTop_toBottomOf="@+id/Owner_comment_text" />

    <EditText
        android:id="@+id/edit_book_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:hint="@string/RateToOwnerBookComment"
        android:inputType="textLongMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Book_comment_text"
        app:layout_constraintTop_toBottomOf="@+id/edit_book_rate" />

    <TextView
        android:id="@+id/Book_ISBN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/RateToOwnerBookISBN"
        app:layout_constraintStart_toStartOf="@+id/Book_author"
        app:layout_constraintTop_toBottomOf="@+id/Book_author" />

    <Button
        android:id="@+id/RateToOwnerSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/Book_comment_text" />

    <TextView
        android:id="@+id/Owner_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RateToOwnerUserEmail"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="116dp" />
</android.support.constraint.ConstraintLayout>