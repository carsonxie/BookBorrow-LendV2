<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/EmailHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:singleLine="true"
        android:maxEms="12"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/BookImage"
        android:layout_toEndOf="@id/BookImage"
        android:textSize="15sp"
        android:text="Book name" />



    <TextView
        android:id="@+id/rating_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:layout_below="@id/EmailHint"
        android:layout_alignLeft="@id/EmailHint"
        android:text="Rating" />

    <TextView
        android:id="@+id/Stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@id/rating_on"
        android:layout_below="@id/rating_on"
        android:text="Status" />

    <ImageView
        android:id="@+id/BookImage"
        android:layout_width="71dp"
        android:layout_height="70dp"
        app:srcCompat="@mipmap/ic_launcher" />

</RelativeLayout>