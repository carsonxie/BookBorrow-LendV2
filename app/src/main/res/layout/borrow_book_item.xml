<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/BorBookImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/BorBookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/BorBookImage"
        android:layout_toEndOf="@id/BorBookImage"
        android:textSize="15sp"
        android:text="Book name" />

    <TextView
        android:id="@+id/OwnerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/BorBookImage"
        android:layout_toEndOf="@id/BorBookImage"
        android:layout_marginTop="5dp"
        android:layout_below="@id/BorBookName"
        android:text="Owner Name" />

    <TextView
        android:id="@+id/BorBookDescrip"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/OwnerName"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/BorBookImage"
        android:layout_toRightOf="@id/BorBookImage"
        android:singleLine="false"
        android:text="Description" />

    <TextView
        android:id="@+id/BorRating_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/BorBookName"
        android:text="Rating" />
</RelativeLayout>